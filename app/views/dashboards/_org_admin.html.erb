<% dashboard_presenter = DashboardsPresenter.new %>
<div class="container py-3">
  <div class="mt-5">
    <h1>Dashboard</h1>
    <p class="lead">Hello, <%= current_user.email %> &#x1F44B;</p>
    <p class="font-weight-bold"> Your permission: &#x1F449; &nbsp; <%= current_user.role.name%></p>
    <p class="font-weight-bold">Your company: &#x1F449; &nbsp;<%= current_user.organisation.title%></p>
    <p class="font-weight-bold">Your line manager: &#x1F449; &nbsp; <%= current_user.manager_email(current_user.manager_id) if current_user.manager_id.present? %></p>
    <%= render partial: 'grid', locals: { items: dashboard_presenter.org_admin_items }%>
  </div>
</div>
<% if current_user.any_active_reviews_cycles? %>
  <p>Test review cycle</p>
<% end %>
<% if current_user.reports.any? && current_user.reports.any?(&submitted_this_week?) %>
  <p>Test report</p>
<% end %>
