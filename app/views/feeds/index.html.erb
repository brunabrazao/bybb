<div class="container py-3">
  <div class="mt-5">
    <h1>Feeds</h1>
    <div id="feeds">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Organisation title</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @feeds.each do |feed| %>
              <tr>
                <th scope="row"><%= feed.id%></th>
                <td><%= link_to "#{feed.organisation_title}", feed, class: 'text-decoration-none' %> </td>
                <td><%= button_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
