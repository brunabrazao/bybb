<html>
  <head>
    <title>BYBB - Your software for continuous performance management</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <header>
      <%= render partial: "homepage/main_navigation" %>
    </header>
    <main role="main mt-5">
      <% if notice %>
        <div class="mt-3">
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
      <%= yield %>
    </main>
    <%= render partial: 'homepage/footer' %>
  </body>
</html>
