<div class="d-flex flex-column min-vh-100 align-items-center">
  <div class="form-group">
    <%= form_with(model: report) do |form| %>
      <div>
        <p class="lead">What are your priorities for next week?</p>
        <%= form.text_area :weekly_priority, class: 'form-control' %>
      </div>
      <div>
        <p class="lead mt-5">What's your biggest challenge right now and how can I help?</p>
        <%= form.text_area :biggest_challenge, class: 'form-control' %>
      </div>
      <div>
        <p class="lead mt-5">Anything else you'd like to discuss/raise?</p>
        <%= form.text_area :additional, class: 'form-control' %>
      </div>
      <div class="mt-5">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
