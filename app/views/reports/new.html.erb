<% user_presenter = UserPresenter.new(current_user) %>
<div class="container py-3">
  <div class="mt-5">
    <div class="text-center">
      <h1 class="mb-4">Create this week's report</h1>
      <p class="mb-5">Only you and your line manager can see your report | Your line manager: <%= user_presenter.user_manager_email %> </p>
    </div>
    <%= render "form", report: @report %>
    <div class="mt-3">
      <%= link_to "Back to reports", reports_path %>
    </div>
  </div>
</div>
