<div class="container py-3">
  <div class="mt-5">
    <h1>Manage your reviews</h1>
    <div id="reviews">
      <%= link_to "New review", new_review_path, class: 'btn btn-success' %>
      <div class="container py-3">
        <div class="mt-5">
          <% @reviews.each do |review|%>
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Review cycle</th>
                    <th scope="col">Submitted at</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row"><%= review.id%></th>
                    <td><%= link_to "#{review.reviews_cycle.name}", review %> </td>
                    <td><%= review.created_at.to_s(:custom_datetime) %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end%>
        </div>
      </div>
    </div>
    <% if @reviews.empty? %>
      You don't have any reviews to display
    <% end %>
  </div>
</div>
