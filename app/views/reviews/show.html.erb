<div class="container py-3">
  <div class="mt-5">
    <h1>Your review</h1>
    <p class='lead'>Review cycle name: <%= @review.reviews_cycle.name %></p>
    <% if @review.reviews_cycle.deadline < Date.today %>
      <div>
        <%= link_to "Edit this review", edit_review_path(@review), class: 'btn btn-success' %>
        <%= button_to "Destroy this review", @review, method: :delete,  class: 'btn btn-danger', data: {confirm: "Are you sure?"} %>
      </div>
    <% end %>
  </div>
  <%= render @review %>
  <hr>
  <%= link_to "Back to reviews", reviews_path %>
</div>
