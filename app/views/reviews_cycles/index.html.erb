<div class="container py-3">
  <div class="mt-5">
    <h1>Manage your reviews cycles</h1>
    <%= link_to "New reviews cycle", new_reviews_cycle_path, class: 'btn btn-success mt-3 mb-3' %>
    <% if @reviews_cycles.empty? %>
      <p>You don't have any active reviews cycle</p>
    <% else %>
      <div id="reviews_cycles">
        <div class="container py-3">
          <div class="mt-5">
            <% @reviews_cycles.each do |reviews_cycle|%>
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Review cycle</th>
                      <th scope="col">Released to users on</th>
                      <th scope="col">Deadline for users</th>
                      <th scope="col">Total users</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <th scope="row"><%= reviews_cycle.id%></th>
                      <td><%= link_to "#{reviews_cycle.name}", reviews_cycle, class: 'text-decoration-none' %> </td>
                      <td><%= reviews_cycle.created_at.to_formatted_s(:custom_datetime) %></td>
                      <td><%= reviews_cycle.deadline.strftime('%a, %e %b %Y') %></td>
                      <td><%= reviews_cycle.selected_users.count %></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            <% end%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
