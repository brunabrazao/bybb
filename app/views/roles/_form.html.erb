<div class="form">
  <%= form_with(model: role) do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_field :description, class: 'form-control' %>
    </div>
    <div>
      <%= form.submit class: 'btn btn-success mt-5' %>
    </div>
  <% end %>
</div>
</div>
