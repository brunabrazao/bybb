<div class="container py-3">
  <div class="mt-5">
    <h1>Manage roles</h1>
    <div id="roles">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Role</th>
            </tr>
          </thead>
          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <th scope="row"><%= role.id%></th>
                <td><%= link_to role.name, role, class: 'text-decoration-none' %> </td>
              </tr>
              <p>
              </p>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <%= link_to "New role", new_role_path %>
  </div>
</div>
