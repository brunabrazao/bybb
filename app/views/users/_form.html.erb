<% user_presenter = UserPresenter.new(current_user) %>
<div class="form-group">
  <%= form_with(model: @user) do |form| %>
    <% if current_user.role.admin?%>
      <div>
        <%= form.label :organisation_id%>
        <%= form.select :organisation_id, user_presenter.organisation_options, include_blank: true, class: 'form-control' %>
      </div>
    <% end %>
    <div class="mt-3">
      <%= form.label :manager_id%>
      <%= form.select :manager_id, user_presenter.user_options, include_blank: true, class: 'form-control' %>
    </div>
    <% if !@user.role.admin?  || current_user.role.admin? %>
      <div class="mt-3">
        <%= form.label :role_id%>
        <%= form.select :role_id, user_presenter.role_options, include_blank: true, class: 'form-control' %>
      </div>
    <% end%>
    <div class="mt-5">
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>
